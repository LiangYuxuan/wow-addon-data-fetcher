{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "google"],
    "plugins": ["mocha"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "eqeqeq": ["error", "smart"],
        "indent": ["error", 4],
        "max-len": ["error", 100, {
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }]
    }
}
